<article class="article">
    <header class="article__header">
        {{# if articleData.data.draft }}
            <div class="band -error text-center landmark">
                <p class="text--bold text--white">THIS POST IS A DRAFT</p>
            </div>
        {{/ if }}

        <div class="article__header-inner">
            <a href="{{ articleData.url }}" class="inline-link">
                <h2 class="article__heading heading--bravo">
                    {{ articleData.data.title }}
                </h2>
            </a>

            {{#if articleData.data.date}}
                <time class="article__date" datetime="{{ date }}">{{ formatDate articleData.data.date }}</time>
            {{/if}}

            {{!-- <ul v-if="articleData.tags" class="banner__meta-list" aria-label="Tags">
                <li v-for="(tag, index) in articleData.tags" :key="index" class="tag">
                    {{ tag }}
                </li>
            </ul> --}}
        </div>
    </header>

    <section class="article__content long-form-copy">
        <p>
            {{{ articleData.data.excerpt }}}
        </p>
    </section>
</article>
